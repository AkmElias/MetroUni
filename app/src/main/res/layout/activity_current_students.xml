<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00254E"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rabel.after_test.CurrentStudents">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <!-- News & Event -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news_eventBtn"
                android:text="News and Event"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="#4CAF50"
                android:background="#F44336"
                />
            <!-- Notice Board -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_eventBtn"
                android:id="@+id/notice_boardBtn"
                android:text="notice-board"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="#4CAF50"
                android:background="#F44336"
                />

            <!-- Class Routine -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notice_boardBtn"
                android:id="@+id/class_routineBtn"
                android:text="Class Routine"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="#4CAF50"
                android:background="#F44336"
                />
            <!-- syllabus -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/class_routineBtn"
                android:id="@+id/syllabusBtn"
                android:text="syllabus"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="#4CAF50"
                android:background="#F44336"
                />
            <!--examination-schedule-->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/class_routineBtn"
                android:id="@+id/examination_scheduleBtn"
                android:text="examination-schedule"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="#4CAF50"
                android:background="#F44336"
                />
            <!-- Research -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/examination_scheduleBtn"
                android:id="@+id/researchBtn"
                android:text="Research"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="#4CAF50"
                android:background="#F44336"
                />
            <!-- Hostel -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/researchBtn"
                android:id="@+id/hostelBtn"
                android:text="Hostel"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="#4CAF50"
                android:background="#F44336"
                />
            <!-- Alumni -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hostelBtn"
                android:id="@+id/alumniBtn"
                android:text="Alumni"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="#4CAF50"
                android:background="#F44336"
                />
            <!-- Orientation -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/alumniBtn"
                android:id="@+id/orientationBtn"
                android:text="Orientation"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="#4CAF50"
                android:background="#F44336"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
