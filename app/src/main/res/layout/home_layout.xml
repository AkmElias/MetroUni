<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00254E"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <!-- About Us -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aboutUsBtn"
        android:text="About Us"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="#4CAF50"
        android:background="#F44336"
        />
    <!-- About Metropolitan University -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutUsBtn"
        android:id="@+id/AboutMetroBtn"
        android:text="About Metropolitan University"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="#4CAF50"
        android:background="#F44336"
        />

    <!-- advisory-board !-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/AboutMetroBtn"
        android:id="@+id/AdvisoryBtn"
        android:text="Advisory-Board"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="#4CAF50"
        android:background="#F44336"
        />
    <!-- board-of-trustees -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/AdvisoryBtn"
        android:id="@+id/Board_of_trusteesBtn"
        android:text="Board-of-Trustees"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="#4CAF50"
        android:background="#F44336"
        />
    <!--syndicate-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Board_of_trusteesBtn"
        android:id="@+id/SyndicateBtn"
        android:text="Syndicate"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="#4CAF50"
        android:background="#F44336"
        />
    <!-- academic-council -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SyndicateBtn"
        android:id="@+id/Academic_councilBtn"
        android:text="academic-council"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="#4CAF50"
        android:background="#F44336"
        />
    <!-- senior-management-committee -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Academic_councilBtn"
        android:id="@+id/Management_CommitteeBtn"
        android:text="Senior-Management-Committee"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="#4CAF50"
        android:background="#F44336"
        />
    <!-- anti-terrorism-committee -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Management_CommitteeBtn"
        android:id="@+id/Anti_Terrorism_CommitteeBtn"
        android:text="Anti-Terrorism-Committee"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="#4CAF50"
        android:background="#F44336"
        />
    <!-- faculty-members -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Anti_Terrorism_CommitteeBtn"
        android:id="@+id/FacultyMembersBtn"
        android:text="Faculty-Members"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="#4CAF50"
        android:background="#F44336"
        />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
